{
  "buildCommand": "npm run install:all && npm run build:frontend",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/vercel/index.ts": {
      "runtime": "@vercel/node@3",
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "api/**"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "destination": "/api/vercel/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "destination": "/index.html" }
  ]
}
