{
  "buildCommand": "npm run install:all && npm run build:api && npm run build:frontend",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/dist/vercel/index.js": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/dist/vercel" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
